{
  "name": "@codingdestro/str-calc",
  "version": "1.0.1",
  "description": "A string calculator function",
  "module": "src/main.ts",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "keywords": [
    "str-calc",
    "str-calculator",
    "calculator",
    "codingdestro"
  ],
  "scripts": {
